
@model TPLOCAL1.Models.FormulaireModel
@Html.ValidationSummary(false, "")

<!DOCTYPE html>

<html>
<style>
    table, p {
        margin-left: 170px;
    }

    tr, td {
        border: 1px solid black;
    }
</style>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>

<body>
    <header>
        <h1>Formulaire TP HN Avis</h1>
    </header>
    <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
    <nav>
        <ul>
            <li><a href="/Home/Index/">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis ">Liste avis</a></li>
        </ul>
    </nav>

    <p>Votre formulaire a bien été pris en compte.</p>

    <!--Tableau infos perso-->
    <table>
        <tr>
            <th colspan="2" style="padding-top: 5px">Informations personnelles</th>
        </tr>
        <tr>
            <td>Nom</td>
            <td>@Model.Nom</td>
        </tr>
        <tr>
            <td>Prénom</td>
            <td>@Model.Prenom</td>
        </tr>
        <tr>
            <td>Sexe</td>
            <td>@Model.Sexe</td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>@Model.Adresse</td>
        </tr>
        <tr>
            <td>Code Postal</td>
            <td>@Model.CodePostal</td>
        </tr>
        <tr>
            <td>Ville</td>
            <td>@Model.Ville</td>
        </tr>
        <tr>
            <td>Adresse mail</td>
            <td>@Model.Mail</td>
        </tr>
    </table>

    <!--Tableau de formation-->
    <table>
        <tr>
            <th colspan="2" style="padding-top:5px">Informations formation suivie</th>
        </tr>
        <tr>
            <td>Date début formation</td>
            <td>@Html.DisplayFor(x => x.DateForm)</td>
        </tr>
        <tr>
            <td>Formation suivie</td>
            <td>@Model.TypeForm</td>
        </tr>
    </table>

    <!--Tableau avis-->
    <table>
        <tr>
            <th colspan="2" style="padding-top:5px">Avis sur la formation</th>
        </tr>
        <tr>
            <td>Formation Cobol</td>
            <td>@Model.FormCob</td>
        </tr>
        <tr>
            <td>Formation objet</td>
            <td>@Model.FormObj</td>
        </tr>
    </table>

</body>
</html>
