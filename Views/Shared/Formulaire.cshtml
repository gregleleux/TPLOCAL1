
@using TPLOCAL1.Models
@model TPLOCAL1.Models.FormulaireModel
@Html.ValidationSummary(false, "")

<!DOCTYPE html>

<html>
<style>
    table {
        margin-left: 170px;
    }

    tr, td {
        border: 1px solid black;
    }
</style>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>

<body>
    <header>
        <h1>Formulaire TP HN Avis</h1>
    </header>
    <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
    <nav>
        <ul>
            <li><a href="/Home/Index/">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis ">Liste avis</a></li>
        </ul>
    </nav>

    @using (Html.BeginForm("ValidationFormulaire", "Home"))
    {
        FormulaireModel u = new FormulaireModel();

        <!--Tableau infos perso-->
        <table>
            <tr>
                <th colspan="2" style="padding-top: 5px">Informations personnelles</th>
            </tr>
            <tr>
                <td>Nom</td>
                <td><input type="text" id="nom" name="nom" /></td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td><input type="text" id="pnom" name="prenom" /></td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                    <select id="sex" name="sexe">
                        <option value="Selectionner un sexe" selected>Selectionner un sexe</option>
                        <option value="Homme">Homme</option>
                        <option value="Femme">Femme</option>
                        <option value="Autre">Autre</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td><input type="text" id="adr" name="adresse" /></td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td><input type="text" id="cod" name="codepostal" /></td>
            </tr>
            <tr>
                <td>Ville</td>
                <td><input type="text" id="vil" name="ville" /></td>
            </tr>
            <tr>
                <td>Adresse mail</td>
                <td><input type="text" id="mail" name="mail" /></td>
            </tr>
        </table>

        <!--Tableau de formation-->
        <table>
            <tr>
                <th colspan="2" style="padding-top:5px">Informations formation suivie</th>
            </tr>
            <tr>
                <td>Date début formation</td>
                <td><input type="date" id="debf" name="dateform" value="2022-01-01"></td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>
                    <select id="form" name="typeform">
                        <option value="Selectionner une formation" selected>Selectionner une formation</option>
                        <option value="Formation Cobol">Formation Cobol</option>
                        <option value="Formation Objet">Formation objet</option>
                        <option value="Formation Double Compétence">Formation double compétence</option>
                    </select>
                </td>
            </tr>
        </table>

        <!--Tableau avis-->
        <table>
            <tr>
                <th colspan="2" style="padding-top:5px">Avis sur la formation</th>
            </tr>
            <tr>
                <td>Formation Cobol</td>
                <td><input type="text" id="fcob" name="formcob" /></td>
            </tr>
            <tr>
                <td>Formation objet</td>
                <td><input type="text" id="fobj" name="formobj" /></td>
            </tr>
        </table>

        <!--Bouton validation-->
        <input type="submit" value="Valider" style="margin-left:170px">
    }
</body>
</html>
